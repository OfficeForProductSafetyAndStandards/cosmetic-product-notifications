<% content_for :page_title, "Forgot password - Market Surveillance & Product Safety" %>

<h1 class="heading-xlarge">Forgot your password?</h1>

<%= form_for :user, url: sessions_reset_password_path, html: { method: :put }, data: { toggle: "validator" } do |form| %>
  <div class="form-group">
    <%= form.label :email, :class => "form-label" %>
    <%= form.email_field :email, autofocus: true, required: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Send me reset password instructions", :class => "button" %>
  </div>
<% end %>
