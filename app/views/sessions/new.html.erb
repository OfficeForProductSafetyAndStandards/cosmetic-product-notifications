<% content_for :page_title, "Log in - Market Surveillance & Product Safety" %>

<h1 class="heading-xlarge">Log in</h1>

<%= form_for :user, url: sessions_signin_path, data: { toggle: "validator" } do |form| %>
  <div class="form-group">
    <%= form.label :email, :class => "form-label" %>
    <%= form.email_field :email, autofocus: true, required: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, :class => "form-label" %>
    <%= form.password_field :password, required: true, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Log in", :class => "button" %>
  </div>
<% end %>

<%= link_to "Forgot your password?", sessions_forgot_password_path %><br />
