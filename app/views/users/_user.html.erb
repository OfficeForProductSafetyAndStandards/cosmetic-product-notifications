<h3 class="heading-medium"><%= user.email %></h3>
<%= form_for(user) do |form| %>
    <div class="form-group">
        <% Role.all.each do |role| %>
            <div class="multiple-choice">
                <%= check_box_tag "user[_roles][]", role.name, user.has_role?(role.name), "aria-label" => role.name %>
                <%= label role.name, role.name %>
            </div>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.submit "Update", :class => "govuk-button" %>
    </div>
<% end %>
<div class="form-group">
    <%= link_to("Delete", user_path(user),
            :data => { :confirm => "Are you sure?" },
            :method => :delete,
            :class => 'button-warning') unless user == current_user %>
</div>
