<% content_for :page_title, "User invitation - Market Surveillance & Product Safety" %>

<h1 class="heading-xlarge"><%= t "devise.invitations.new.header" %></h1>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-group">
      <%= f.label field, :class => "form-label" %>
      <%= f.text_field field, :class => "form-control" %>
    </div>
  <% end -%>

  <%= f.submit t("devise.invitations.new.submit_button"), :class => "govuk-button" %>
<% end %>
