<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Category(s)</th>
      <th>Origin Co</th>
      <% unless @compressed %>
        <th>Investigations</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.brand %></td>
        <td>N/A</td>
        <td><%= product.country_of_origin_for_display%></td>
        <% unless @compressed %>
          <td><%= product.investigations.length %></td>
        <% end %>
      </tr>
    <% end %>
    <% if @products.empty? %>
    <tr>
      <td>No products found.</td>
    </tr>
    <% end %>
  </tbody>
</table>
