<table>
  <thead>
    <tr>
      <th><%= sortable "name", "Name" %></th>
      <th><%= sortable "brand", "Brand" %></th>
      <th><%= sortable "category", "Category(s)" %></th>
      <th><%= sortable "country_of_origin", "Origin Co" %></th>
      <% unless @compressed %>
        <th>Investigations</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.brand %></td>
        <td><span class="not-implemented">Some category (+10)</span></td>
        <td><%= product.country_of_origin_for_display%></td>
        <% unless @compressed %>
        <td>
          <span class="investigations not-implemented">
            <%= link_to product.investigations.count, investigations_path %>
          </span>
        </td>
        <% end %>
      </tr>
    <% end %>
    <% if @products.empty? %>
    <tr>
      <td>No products found.</td>
    </tr>
    <% end %>
  </tbody>
</table>
