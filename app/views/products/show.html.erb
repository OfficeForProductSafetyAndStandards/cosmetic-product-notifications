<% content_for :page_title, "View product - Market Surveillance & Product Safety" %>

<div class="breadcrumbs">
    <ol role="breadcrumbs">
        <li>
            <a href="/">Home</a>
        </li>
        <li>
            <%= link_to 'Products', products_path %>
        </li>
        <li>
            <%= link_to 'View', @product %>
        </li>
    </ol>
</div>

<h1 class="heading-xlarge">
  Product
</h1>

<div class="slider-nav">
  <% @product.images.each do |image| %>
    <%= image_tag(image.url, alt: image.title) %>
  <% end %>
</div>

<h4 class="heading-small">
  Product ID
</h4>
<p>
  <%= @product.id %>
</p>

<h4 class="heading-small">
  GTIN (Global Trade Item Number/Barcode)
</h4>
<p>
  <%= @product.gtin %>
</p>

<h4 class="heading-small">
  Name
</h4>
<p>
  <%= @product.name %>
</p>

<h4 class="heading-small">
  Brand
</h4>
<p>
  <%= @product.brand %>
</p>

<h4 class="heading-small">
  Description
</h4>
<p>
  <%= @product.description %>
</p>

<h4 class="heading-small">
  Model
</h4>
<p>
  <%= @product.model %>
</p>

<h4 class="heading-small">
  Batch number
</h4>
<p>
  <%= @product.batch_number %>
</p>

<h4 class="heading-small">
  Serial number
</h4>
<p>
  <%= @product.serial_number %>
</p>

<h4 class="heading-small">
  URL reference
</h4>
<p>
  <%= link_to(@product.url_reference, @product.url_reference, target: "_blank") unless @product.url_reference.nil? %>
</p>

<h4 class="heading-small">
  Manufacturer
</h4>
<p>
  <%= @product.manufacturer %>
</p>

<h4 class="heading-small">
  Country of origin
</h4>
<p>
  <%= @product.country_of_origin_for_display %>
</p>

<h4 class="heading-small">
  Date placed on the market
</h4>
<p>
  <%= @product.date_placed_on_market&.to_s :long_ordinal %>
</p>

<h4 class="heading-small">
  Associated parts or components
</h4>
<p>
  <%= @product.associated_parts %>
</p>

<h4 class="heading-small">
  Source
</h4>
<p>
  <%= @product.source.show %>
</p>

<% if @product.investigations.any? -%>
  <h4 class="heading-small">Investigations</h4>
  <% @product.investigations.each do |investigation| %>
    <p><%= link_to investigation.id, investigation %></p>
  <% end %>
<% end -%>

<div class="form-group no-print">
  <%= link_to 'Edit', edit_product_path(@product), :class => "govuk-button" %>
</div>

<div class="form-group no-print">
  <%= link_to 'Create PDF document', product_path(@product, :format => :pdf) %>
</div>

<div class="form-group no-print">
  <%= link_to 'Back', products_path, :class => "link-back" %>
</div>

<%= render 'history', versions: @product.versions %>
