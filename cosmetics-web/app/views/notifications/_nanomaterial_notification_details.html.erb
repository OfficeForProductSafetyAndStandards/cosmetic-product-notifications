<%= nanomaterial_notification.ukn %> - <%= nanomaterial_notification.name %>
<% if can_view_nanomaterial_notification_files? %>
  <% if nanomaterial_notification.passed_antivirus_check? %>
    <% file = nanomaterial_notification.file %>
    <br>
    <%= link_to(file.filename,
                url_for(file),
                class: "govuk-link govuk-link--no-visited-state",
                target: "_blank",
                rel: "noopener") %>
    <%= render("shared/pdf_size", file: file) %>
  <% elsif nanomaterial_notification.pending_antivirus_check? %>
    <%= nanomaterial_notification.file.filename %> pending virus scan
 <% else %>
    <%= nanomaterial_notification.file.filename %> failed virus scan
  <% end %>
<% end %>
