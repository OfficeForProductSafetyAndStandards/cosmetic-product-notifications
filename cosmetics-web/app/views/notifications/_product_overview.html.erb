<div class="product">
  <div class="check-your-answers product-data govuk-body-s">
    <dl>
      <div class="govuk-clearfix">
        <dt>UK cosmetic product number:</dt>
        <dd><%= notification.reference_number_for_display %></dd>
      </div>

      <% if notification.industry_reference.present? %>
        <div class="govuk-clearfix">
          <dt>Internal reference number:</dt>
          <dd><%= notification.industry_reference %></dd>
        </div>
      <% end %>

      <% if notification.cpnp_reference %>
        <div class="govuk-clearfix">
          <dt>EU reference number:</dt>
          <dd><%= notification.cpnp_reference %></dd>
        </div>
      <% end %>

      <% if notification.cpnp_notification_date.present? %>
        <div class="govuk-clearfix">
          <dt>First notified in the EU:</dt>
          <dd><%= display_full_month_date notification.cpnp_notification_date %></dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>
