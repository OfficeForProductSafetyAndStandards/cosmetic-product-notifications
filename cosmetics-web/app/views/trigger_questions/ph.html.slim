- title = "What is the pH of #{@component_name}?"

- content_for :page_title, title
- content_for :after_header do
  = link_to "Back", previous_wizard_path, class: "govuk-back-link"

= form_with model: @component, url: wizard_path, method: :put do |form|
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      = render "form_components/govuk_error_summary", form: form
      = form.fields_for :component do

        = render "components/govuk_fieldset", legend: { text: title,
          isPageHeading: true, classes: 'govuk-fieldset__legend--xl' } do

          = render "form_components/govuk_input", form: form, key: :minimum_ph,
            label: { text: 'Minimum pH' }, classes: 'govuk-input--width-4'

          = render "form_components/govuk_input", form: form, key: :maximum_ph,
            label: { text: 'Maximum pH' }, classes: 'govuk-input--width-4'

      = form.submit "Continue", class: "govuk-button"
