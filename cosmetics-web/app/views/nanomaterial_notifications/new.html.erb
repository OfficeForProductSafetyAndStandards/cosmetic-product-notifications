<% content_for :page_title, "Nanomaterials" %>
<% content_for :after_header do %>
  <%= render "layouts/navbar" %>
<% end %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @nanomaterial_notification, url: responsible_person_nanomaterials_path(@responsible_person) do |form| %>

      <%= render "form_components/govuk_error_summary", form: form %>

      <%= render "form_components/govuk_input", form: form, key: :name, label: { text: "What is the name of the nanomaterial?", isPageHeading: "true", classes: "govuk-label--xl" }  %>

      <button type="submit" class="govuk-button">Continue</button>
    <% end %>

  </div>
</div>
