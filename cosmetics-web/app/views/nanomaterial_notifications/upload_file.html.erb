<% content_for :page_title, "Nanomaterials" %>
<% content_for :after_header do %>
  <%= render "layouts/navbar" %>
<% end %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @nanomaterial_notification, url: file_nanomaterial_path(@nanomaterial_notification), method: :patch, multipart: true do |form| %>

      <%= render "form_components/govuk_error_summary", form: form %>

      <h1 class="govuk-heading-xl">Upload file</h1>

      <div class="govuk-form-group">
        <label class="govuk-label" for="file">
          Upload a file
        </label>
        <%= form.file_field :file %>
      </div>

      <button type="submit" class="govuk-button">Continue</button>
    <% end %>
  </div>
</div>
