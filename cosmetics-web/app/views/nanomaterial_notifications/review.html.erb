<% content_for :page_title, "Nanomaterials" %>
<% content_for :after_header do %>
  <%= render "layouts/navbar" %>
<% end %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-xl">Check your answers</h1>


    <%= govukSummaryList(rows: [
      {
        key: {text: 'IUPAC name'},
        value: {text: @nanomaterial_notification.iupac_name},
        actions: {
          items: [
            {
              href: name_nanomaterial_path(@nanomaterial_notification),
              text: "Change",
              visuallyHiddenText: "IUPAC name"
            }
          ]
        }
      },
      {
        key: {text: 'Notified in EU'},
        value: {
          text: (@nanomaterial_notification.eu_notified? ? "On " + @nanomaterial_notification.notified_to_eu_on.to_s(:long) : "No")
        },
        actions: {
          items: [
            {
              href: notified_to_eu_nanomaterial_path(@nanomaterial_notification),
              text: "Change",
              visuallyHiddenText: "EU notification"
            }
          ]
        }
      },
      {
        key: {text: 'PDF file'},
        value: {
          text: (link_to("PDF file", @nanomaterial_notification.file) if @nanomaterial_notification.file.attached?)
        },
        actions: {
          items: [
            {
              href: upload_file_nanomaterial_path(@nanomaterial_notification),
              text: "Change",
              visuallyHiddenText: "file"
            }
          ]
        }
      }
    ]) %>


      <h2 class="govuk-heading-m">Now send your nanomaterial notification</h2>

      <p class="govuk-body">Your submission will be reviewed by the Office for Product Safety and Standards.</p>

      <%= form_for @nanomaterial_notification, url: submission_nanomaterial_path(@responsible_person, @nanomaterial_notification) do |form| %>

        <button type="submit" class="govuk-button">Accept and send</button>
      <% end %>
  </div>
</div>
