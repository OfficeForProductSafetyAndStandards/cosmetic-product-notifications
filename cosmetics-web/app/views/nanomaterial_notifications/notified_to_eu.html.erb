<% page_title_prefix = safe_join(["Was the EU notified about ", @nanomaterial_notification.name," on CPNP before "]) %>
<% brexit_date = display_full_month_date(EU_EXIT_DATE) %>

<% page_title = "What is the name of the nanomaterial?" %>

<% page_title safe_join([page_title_prefix, brexit_date, "?"]), errors: @nanomaterial_notification.errors.any? %>
<% content_for :after_header do %>
  <%= govuk_back_link(href: @previous_page_path) %>
<% end %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @nanomaterial_notification, url: notified_to_eu_nanomaterial_path(@nanomaterial_notification), html: { novalidate: true }, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |form| %>

      <%= form.govuk_error_summary %>

      <% date_notified_to_eu_html = form.govuk_date_field :notified_to_eu_on, legend: { text: "Date EU notified on" }, hint: { text: "For example, 31 3 2019" } %>

      <%= form.govuk_radio_buttons_fieldset(:eu_notified, legend: { size: 'xl', text: 'Was the EU notified about test nano 200 on CPNP before 1 January 2021?' }) do %>
        <%= form.govuk_radio_button :eu_notified, true, label: { text: "Yes, the EU was notified about the nanomaterial on CPNP before #{brexit_date}" }, link_errors: true do %>
          <%= date_notified_to_eu_html %>
        <% end %>
        <%= form.govuk_radio_button :eu_notified, false, label: { text: "No" } %>
      <% end %>
      <%= govukButton text: "Continue" %>
    <% end %>

  </div>
</div>
