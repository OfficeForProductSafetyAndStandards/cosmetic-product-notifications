<% content_for :page_title, "Nanomaterials" %>
<% content_for :after_header do %>
  <%= render "layouts/navbar" %>

  <%= govukBackLink(text: "Back", href: @back_link_path) %>
<% end %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for @nanomaterial_notification, url: notified_to_eu_nanomaterial_path(@nanomaterial_notification) do |form| %>

      <%= render "form_components/govuk_error_summary", form: form %>

      <% date_notified_to_eu_html = render("components/govuk_date_input",
        id: "notified_to_eu_on",
        fieldset: { legend: { text: "Date EU notified on" } },
        hint: { text: "For example, 31 3 2019" },
        items: [
          {
            name: "notified_to_eu_on(3i)",
            classes: "govuk-input--width-2",
            label: "Day"
          },
          {
            name: "notified_to_eu_on(2i)",
            classes: "govuk-input--width-2",
            label: "Month"
          },
          {
            name: "notified_to_eu_on(1i)",
            classes: "govuk-input--width-4",
            label: "Year"
          }]) %>


      <%= render "components/govuk_radios",
          "idPrefix": "eu_notified",
          "name": "eu_notified",
          "fieldset": {
            "legend": {
              "text": "Was the EU notified about #{@nanomaterial_notification.name} on CPNP before 1 February 2020?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--xl"
            }
          },
          "items": [
            {
              "value": "true",
              "text": "Yes, the EU was notified about the nanomaterial on CPNP before 1 February 2020",
              "checked": @nanomaterial_notification.eu_notified == true,
              "conditional": {"html": date_notified_to_eu_html}
            },
            {
              "value": "false",
              "text": "No",
              "checked": @nanomaterial_notification.eu_notified == false,
            }
          ]
        %>

      <button type="submit" class="govuk-button">Continue</button>
    <% end %>

  </div>
</div>
