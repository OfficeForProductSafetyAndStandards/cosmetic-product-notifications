<% title = "What is the pH of #{@component_name}?" %>

<% page_title title, errors: @component.errors.any? %>
<% content_for :after_header do %>
  <%= link_to "Back", previous_wizard_path, class: "govuk-back-link" %>
<% end %>

<%= form_with model: @component, url: wizard_path, method: :put do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= error_summary_for(@component) %>
      <%= form.fields_for :component do %>

        <%= govukFieldset(legend: { text: title, isPageHeading: true, classes: 'govuk-fieldset__legend--xl' }) do %>

          <%= govukInput(form: form, key: :minimum_ph, label: { text: 'Minimum pH' }, classes: 'govuk-input--width-4') %>

          <%= govukInput(form: form, key: :maximum_ph, label: { text: 'Maximum pH' }, classes: 'govuk-input--width-4') %>
        <% end %>
      <% end %>

      <%= govukButton text: "Continue" %>

    </div>
  </div>
<% end %>
