<% title = "Poisonous ingredients" %>

<% page_title title, errors: @component.errors.any? %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: previous_wizard_path %>
<% end %>

<%= error_summary_for(@component, first_values: {contains_poisonous_ingredients: "true"}) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_with model: @component, url: wizard_path, method: :put do |form| %>


      <%= render "form_components/govuk_radios", form: form, key:   :contains_poisonous_ingredients,
        fieldset: { legend: { html: "<h1 class=\"govuk-fieldset__heading\">Does the product contain poisonous ingredients?</h1>".html_safe, classes: "govuk-fieldset__legend--l", isPageHeading: false } },
        hint: { html: render('poisonous_ingredients'), classes: "govuk-!-font-size-16 govuk-!-margin-top-3" },
        items: [{ text: "Yes", value: "true" },
                { text: "No", value: "false" }] %>

      <%= govukButton text: "Continue" %>
    <% end %>
  </div>
</div>
