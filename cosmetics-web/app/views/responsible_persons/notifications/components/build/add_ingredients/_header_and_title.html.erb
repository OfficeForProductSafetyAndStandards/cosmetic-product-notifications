<% title ||= "Add the ingredients" %>
<% ingredient_errors = ingredient_errors(@component) %>

<% page_title title, errors: ingredient_errors.any? %>

<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: previous_wizard_path %>
<% end %>

<% if ingredient_errors.any? %>
  <%= govukErrorSummary titleText: "There is a problem", errorList: ingredient_errors %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-3"><%= title %></h1>
  </div>
</div>
