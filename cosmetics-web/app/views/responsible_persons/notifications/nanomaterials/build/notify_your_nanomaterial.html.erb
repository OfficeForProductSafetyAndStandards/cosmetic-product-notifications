<% title = "You cannot notify this product until you have notified the nanomaterial you want to use" %>

<% content_for :page_title, title %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: previous_wizard_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l"><%= title %></h1>

    <ul class="govuk-list govuk-list--bullet">
      <li>Go to <%= link_to "your nanomaterials", responsible_person_nanomaterials_path(current_responsible_person), class: "govuk-link--no-visited-state" %>.</li>
      <li>Read <%= link_to "how to notify nanomaterials", how_to_notify_nanomaterials_path, target: '_new' %>.</li>
      <li>Return to <%= link_to "the task list page", responsible_person_notification_draft_path(current_responsible_person, @notification), class: "govuk-link--no-visited-state" %>.</li>
    </ul>
  </div>
</div>
