<% title = "Number of shades" %>
<%  question = "Is the #{@component_name} available in different shades?" %>

<% items = [{ text: "Yes", value: "multiple-shades-same-notification" },
          { text: "No", value: "single-or-no-shades" }] %>


<% content_for :page_title, title %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: previous_wizard_path %>
<% end %>

<%= form_with model: @component, url: wizard_path, method: :put do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <%= error_summary_for(@component, first_values: {number_of_shades: "multiple-shades-same-notification"}) %>
      <%= render "form_components/govuk_radios", form: form, key: :number_of_shades,
          fieldset: { legend: { text: question, classes: "govuk-label--l", isPageHeading: true } },
          items: items %>
      <%= govukButton text: "Continue" %>
    </div>
  </div>
<% end %>
