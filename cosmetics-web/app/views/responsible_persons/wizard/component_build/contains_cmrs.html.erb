<% title = "Substances known or presumed to cause cancer, mutations or are toxic for reproduction (CMRs)" %>
<% question = "Does #{@component_name} contain category 1A or 1B CMRs?" %>

<% content_for :page_title, title %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: previous_wizard_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @component, url: wizard_path, method: :put do |form| %>
      <%= error_summary_for(@component, first_values: {contains_cmrs: "yes"}) %>

      <h1 class="govuk-heading-xl"><%= title %></h1>

      <p class="govuk-!-margin-bottom-1">CMRs categories are:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>1A – known from studies on humans</li>
        <li>1B – presumed from studies on animals</li>
        <li>2 – suspected from some human or animal studies</li>
      </ul>

      <%= render "form_components/govuk_radios", form: form, key: :contains_cmrs,
              fieldset: { legend: { text: question, classes: "govuk-label--m" } },
              items: [{ text: "Yes", value: :yes },
                      { text: "No", value: :no }] %>
      <%= govukButton text: "Continue" %>
    <% end %>
  </div>
</div>
