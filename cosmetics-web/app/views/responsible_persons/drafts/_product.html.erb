<li>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <h2 class="app-task-list__section">
        <span class="app-task-list__section-number">1. </span>
        Create the product
      </h2>
    </div>
    <div class="app-task-list__section-number govuk-grid-column-one-half">
      <%= product_badge(@notification) %>
    </div>
  </div>

  <ul class="app-task-list__items">
    <% if @notification.persisted? %>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="create_product">
          Product name
        </span>
        <%= link_to "Go to question", new_responsible_person_notification_path(@responsible_person), class: "app-task-list__tag", "aria-describedby": "create_product" %>
      </li>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="internal_reference">
          Internal reference
        </span>
        <%= link_to "Go to question", responsible_person_notification_product_path(@responsible_person, @notification, :add_internal_reference), class: "app-task-list__tag", "aria-describedby": "internal_reference" %>
      </li>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="for_children_under_three">
          Children under 3 years old
        </span>
        <%= link_to "Go to question", responsible_person_notification_product_path(@responsible_person, @notification, :for_children_under_three), class: "app-task-list__tag", "aria-describedby": "for_children_under_three" %>
      </li>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="contains_nanomaterials">
          Nanomaterials
        </span>
        <%= link_to "Go to question", responsible_person_notification_product_path(@responsible_person, @notification, :contains_nanomaterials), class: "app-task-list__tag", "aria-describedby": "contains_nanomaterials" %>
      </li>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="single_or_multi_component">
          Multi-item kit
        </span>
        <%= link_to "Go to question", responsible_person_notification_product_path(@responsible_person, @notification, :single_or_multi_component), class: "app-task-list__tag", "aria-describedby": "single_or_multi_component" %>
      </li>
      <li class="app-task-list__item_no_border">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="add_product_image">
          Image upload
        </span>
        <%= link_to "Go to question", responsible_person_notification_product_path(@responsible_person, @notification, :add_product_image), class: "app-task-list__tag", "aria-describedby": "add_product_image" %>
      </li>
    <% else %>
      <li class="app-task-list__item">
        <span class="app-task-list__task-name govuk-!-font-weight-bold" id="create_product">
          Product name
        </span>
        <%= link_to "Go to question", new_responsible_person_notification_path(@responsible_person), class: "app-task-list__tag", "aria-describedby": "create_product" %>
      </li>
    <% end %>
    </li>
  </ul>
</li>
