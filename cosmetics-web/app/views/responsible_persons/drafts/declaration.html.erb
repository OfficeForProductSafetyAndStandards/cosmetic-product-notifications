<% content_for :page_title, "Accept and submit" %>
<% content_for :after_header do %>
  <%= link_to "Back", review_responsible_person_notification_draft_path(@responsible_person, @notification), class: "govuk-back-link" %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l govuk-!-margin-bottom-2">
      Accept and submit
    </h1>

    <p class="govuk-body opss-secondary-text">Accept and submit the product notification for <%= @notification.product_name %>.</p>

  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <section class="govuk-!-margin-top-9">
      <h2 class="govuk-heading-m">Declaration</h2>

      <%= form_with url: accept_responsible_person_notification_draft_path(@responsible_person, @notification), method: :post, html: { novalidate: true } do |form| %>
        <p class="govuk-body">
        By submitting this cosmetic product notification, you confirm that the details you provide are correct to the best of your knowledge.
        </p>
        <div class="govuk-button-group govuk-!-margin-top-6">
          <%= govukButton text: "Accept and submit" %>
          <%= link_to "Return to the tasks list page", responsible_person_notification_draft_path(@responsible_person, @notification), class: 'govuk-link govuk-link--no-visited-state' %>
        </div>
      <% end %>
    </section>
  </div>
</div>
