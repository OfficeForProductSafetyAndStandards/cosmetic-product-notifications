<% title = "Edit the assigned contact #{field}" %>
<% page_title title, errors: @contact_person.errors.any? %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: responsible_person_path(@responsible_person)  %>
<% end %>

<%= form_with model: @contact_person, url: responsible_person_contact_person_path(@responsible_person, @contact_person), html: { novalidate: true }, method: :put do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <%= error_summary_for(@contact_person) %>

      <h1 class="govuk-heading-l"><%= title %></h1>

      <%= yield form %>

      <div class="govuk-form-group">
        <%= govukButton text: "Save and continue" %>
      </div>
    </div>
  </div>
<% end %>
