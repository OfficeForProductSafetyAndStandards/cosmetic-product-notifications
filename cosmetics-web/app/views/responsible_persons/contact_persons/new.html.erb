<% page_title "New contact person", errors: @contact_person.errors.any? %>
<% content_for :after_header do %>
  <%= govukBackLink text: "Back", href: account_path(:enter_details) %>
<% end %>

<%= form_with model: @contact_person, url: responsible_person_contact_persons_path(@responsible_person), html: { novalidate: true }, method: :post do |form| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <%= error_summary_for(@contact_person) %>

      <h1 class="govuk-heading-l govuk-!-margin-bottom-2">Contact person for <%= @responsible_person.name %></h1>

      <p class="govuk-body opss-secondary-text govuk-!-margin-bottom-6">
        A contact person must provide information when the National Poisons Information Service (<abbr>NPIS</abbr>) or market surveillance authorities - such as Trading Standards officers - request it.
      </p>

      <%= govukInput(form: form, key: :name, label: { text: "Full name" }) %>

      <%= govukInput(form: form, key: :email_address, type: :email, label: { text: "Email" }) %>

      <%= govukInput(form: form, key: :phone_number, type: :tel, label: { text: "Telephone" }, classes: "govuk-input--width-20") %>

      <div class="govuk-form-group">
        <%= govukButton text: "Continue" %>
      </div>
    </div>
  </div>
<% end %>
