<%= form_for(@search_form, url: poison_centre_ingredients_search_path, method: :get, html: { novalidate: true , id: "new_ingredient_search_form_sort" }) do |form| %>
  <label class="govuk-label govuk-body-s" for="ingredient_search_form_sort_by">
    Sort by
  </label>
  <%= form.select :sort_by, options_for_select(@search_form.sorting_options, @search_form.sort_by), {}, class: "govuk-select govuk-!-margin-bottom-1" %>
  <button class="govuk-button opss-js-enabled-hidden" data-module="govuk-button">
    Sort
  </button>
  <%= form.hidden_field :q, id: :ingredient_search_form_q_sort_hidden %>
  <%= form.hidden_field :exact_or_any_match, id: "ingredient_search_form_exact_or_any_match_hidden" %>
  <%= form.hidden_field :group_by, id: "ingredient_search_form_group_by_hidden" %>
  <%= render partial: "hidden_date_fields", locals: { attribute: :date_from, id: :sort_form, search_type: "ingredient" } %>
  <%= render partial: "hidden_date_fields", locals: { attribute: :date_to, id: :sort_form, search_type: "ingredient" } %>
<% end %>

