<% content_for :page_title, "Search cosmetic products" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full opss-desktop-min-height--s">

    <h1 class="govuk-heading-l govuk-!-margin-bottom-2">
      Cosmetic products search
    </h1>

    <p class="govuk-body opss-secondary-text">
    Search for notified cosmetic products.
    </p>

    <details class="govuk-details govuk-!-width-two-thirds opss-details--sm" data-module="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          Help with the cosmetic products search
        </span>
      </summary>
      <div class="govuk-details__text">

        <p class="govuk-body-s govuk-!-margin-bottom-4">
        <span id="search-hint">You can search for a cosmetic product notification using the keywords that describe it and by filtering the results.</span> Searching on a <abbr>UK</abbr> cosmetic product number will return the product notification followed by any notifications with a similar number.
        </p>

        <p class="govuk-body-s govuk-!-margin-bottom-1">
        You can also filter all notified product records without any search input.
        </p>

      </div>
    </details>

    <%= error_summary(@search_form.errors) %>
  </div>
</div>

<div class="govuk-grid-row opss-full-height">
  <%= render "filters" %>
  <%= render "results", results: @notifications, search_response: @search_response %>
</div>
