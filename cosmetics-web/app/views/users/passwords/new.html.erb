<% title = "Reset your password" %>
<% page_title(title, errors: resource.errors.any?) %>

<% content_for :after_header do %>
  <%= govukBackLink(text: "Back", href: new_user_session_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">

    <%= error_summary resource.errors %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <p class="govuk-body">Enter the email address that you used to register. We will send you an email with a link to reset your password.</p>

    <%= form_for(resource, as: resource_name, url: user_password_path, html: { novalidate: true }) do |f| %>
      <%= email_input(resource) %>

      <%= govukButton(text: "Send email") %>
    <% end %>
  </div>
</div>
