<head>
  <% # Google Analytics %>
  <% if true || Rails.env.production? %>
    <% if analytics_cookies_accepted? %>
      <%= javascript_include_tag "https://www.googletagmanager.com/gtag/js?id=UA-126364208-2", async: true, nonce: true %>
      <%= javascript_tag nonce: true do %>
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }
        gtag('js', new Date());
        gtag('config', 'UA-126364208-2');
      <% end %>
    <% end %>
  <% end %>
  <meta charset="utf-8" />
  <title><%= yield :page_title %><%= " - #{@service_name}" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="blue" />
  <link rel="shortcut icon" type="image/x-icon" href="<%= image_path("favicon.ico") %>" />
  <link rel="mask-icon" color="#0b0c0c" href="<%= image_path("govuk-mask-icon.svg") %>">
  <link rel="apple-touch-icon" sizes="180x180" href="<%= image_path("govuk-apple-touch-icon-180x180.png") %>" />
  <link rel="apple-touch-icon" sizes="167x167" href="<%= image_path("govuk-apple-touch-icon-167x167.png") %>" />
  <link rel="apple-touch-icon" sizes="152x152" href="<%= image_path("govuk-apple-touch-icon-152x152.png") %>" />
  <link rel="apple-touch-icon" href="<%= image_path("govuk-apple-touch-icon.png") %>" />
  <!--[if !IE 8]><!-->
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application" %>
  <!--<![endif]-->
  <!--[if lte IE 8]>
    <%= javascript_pack_tag "application-ie8", nonce: true %>
    <%= stylesheet_pack_tag "application-ie8" %>
  <![endif]-->
  <%= csrf_meta_tags %>
  <meta property="og:image" content="<%= image_path("govuk-opengraph-image.png") %>" />
</head>
