<% title = "Change your password" %>
<% page_title title, errors: @user.errors.any? %>

<% content_for(:after_header) do %>
  <%= govukBackLink(text: "Back", href: account_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= error_summary(@user.errors) %>

    <h1 class="govuk-heading-l"><%= title %></h1>

    <%= form_with model: @user, url: account_password_path, method: :patch do |form| %>

      <%= render "form_components/govuk_input",
        key: :old_password,
        form: form,
        classes: "app-!-max-width-two-thirds",
        label: {
          text: "Old password"
        },
        value: nil,
        id: "name"
        %>
      <%= render "form_components/govuk_input",
        key: :password,
        form: form,
        classes: "app-!-max-width-two-thirds",
        label: {
          text: "New password"
        },
        value: nil,
        id: "name"
        %>

      <%= govukButton(text: "Save") %>
    <% end %>
  </div>
</div>
