<% title = "Change your email address" %>
<% page_title title, errors: @user.errors.any? %>

<% content_for(:after_header) do %>
  <%= govukBackLink(text: "Back", href: my_account_path) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with model: @user, url: my_account_email_path, method: :patch, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |form| %>
      <%= form.govuk_error_summary %>
      <h1 class="govuk-heading-l"><%= title %></h1>
      <%= form.govuk_text_field :password, label: { text: "Password" }, type: "password" %>
      <%= form.govuk_text_field :new_email, label: { text: "New email address" } %>
      <%= form.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
