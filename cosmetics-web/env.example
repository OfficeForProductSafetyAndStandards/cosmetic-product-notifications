# Copy this file to .env and fill in the values with your own env variables

# Local hostnames for the submit/search variants of the service
SEARCH_HOST=search_cosmetics
SUBMIT_HOST=submit_cosmetics

# Postgres
DATABASE_URL=postgres://localhost:5432/cosmetics_dev

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9201

# Keycloak authentication service
KEYCLOAK_AUTH_URL=http://keycloak:8080/auth
KEYCLOAK_CLIENT_ID=cosmetics-app
KEYCLOAK_CLIENT_SECRET=

# Antivirus supporting service
ANTIVIRUS_USERNAME=
ANTIVIRUS_PASSWORD=

# GOV.UK Notify
NOTIFY_API_KEY=
NOTIFY_SMS_TEMPLATE_ID=

# Amazon Web Services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Sentry error monitoring
SENTRY_DSN=

# Rails
SECRET_KEY_BASE=
RAILS_LOG_TO_STDOUT=true
LOGRAGE_ENABLED=false
RAILS_ENV=development

# Node.js
NODE_ENV=development

# Basic authentication
# BASIC_AUTH_USERNAME=
# BASIC_AUTH_PASSWORD=

# Chromedriver (https://chromedriver.chromium.org)
CHROMEDRIVER_PATH=/path/to/chromedriver

# Anti-Virus check enabled? (see README)
ANTIVIRUS_ENABLED=true
