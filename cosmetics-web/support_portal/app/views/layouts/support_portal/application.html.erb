    <link rel="manifest" href="<%= image_path("manifest.json") %>">
    <meta property="og:image" content="<%= image_path("govuk-opengraph-image.png") %>">
    <%= stylesheet_link_tag "support_portal/application" %>
    <%= csrf_meta_tags %>
  </head>
