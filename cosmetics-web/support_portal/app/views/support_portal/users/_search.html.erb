<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
      <%= form_tag users_path, { method: :get } do %>
        <label class="govuk-label govuk-label--s" for="search_term">
          Enter a search term
        </label>
        <div class="govuk-hint" id="search_term-hint">
          For example, FullName, email@email.com
        </div>
        <div class="govuk-input__wrapper search__wrapper">
          <%= text_field_tag :search_term, "", class: "govuk-input", "aria-describedby" => "search_term-hint" %>
          <button class="govuk-button govuk-!-margin-bottom-0">
            <span class="govuk-visually-hidden">Submit search</span>
          </button>
        </div>
      <% end %>
  </div>
</div>
