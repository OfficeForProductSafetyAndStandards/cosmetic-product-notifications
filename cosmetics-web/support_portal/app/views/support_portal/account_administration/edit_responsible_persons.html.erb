<% content_for :page_title, "#{@user.name} - Responsible Person accounts" %>
<% @back_link_href = account_administration_path(@user, q: params[:q]) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%=
      govuk_table do |table|
        table.with_head do |head|
          head.with_row do |row|
            row.with_cell(text: "Responsible Person")
            row.with_cell(text: '<span class="govuk-visually-hidden">Remove access</span>'.html_safe)
          end
        end
        table.with_body do |body|
          @responsible_persons.each do |record|
            body.with_row do |row|
              row.with_cell(header: true, text: record.name)
              row.with_cell(text: "<a href=\"#{confirm_delete_responsible_person_user_account_administration_path(@user, record.responsible_person_user_id, q: params[:q])}\" class=\"govuk-link\">Remove<span class=\"govuk-visually-hidden\"> access</span></a>".html_safe)
            end
          end
        end
      end
    %>
  </div>
</div>
